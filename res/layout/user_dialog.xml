<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textUser" android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp" android:textColor="@color/dialogBlueHolo"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textDesc" android:layout_gravity="left|center_vertical" android:layout_margin="10dp"
            android:textColor="@color/dialogBlueHolo"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textPass" android:layout_gravity="left|center_vertical" android:layout_margin="10dp"
            android:textStyle="bold" android:textColor="@color/dialogBlueHolo"/>
</LinearLayout>